<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout_popup"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#7d000000"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="vertical" >

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:background="@drawable/background2"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >
        <TableLayout
                android:background="@color/table"
                android:layout_width="match_parent"
                android:layout_height="350dp">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="350dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                    <ImageView
                            android:layout_gravity="top"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp" app:srcCompat="@drawable/nhlmain"
                            android:id="@+id/imageView37"/>
                    <ImageView
                            android:layout_gravity="top"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp" app:srcCompat="@drawable/nhlmain"
                            android:id="@+id/imageView2"/>
                    <TextView
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Players Name"
                            style="@style/Regular"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView3"/>
                </LinearLayout>
                <TableLayout
                        android:background="@color/table"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Position"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView5"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Country"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView8"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Age"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView4"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Team"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView9"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Height"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView6"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="Weight"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView7"/>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text=""
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="viewStart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView22"/>
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
        <TableRow
                android:layout_marginStart="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TableLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TableRow android:layout_width="match_parent" android:layout_height="18dp">
                        <TableRow android:layout_width="50dp" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="GP"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView12"/>
                        </TableRow>
                        <TableRow android:layout_width="50dp" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="G"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView13"/>
                        </TableRow>
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="A"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="center"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content" android:id="@+id/textView14"/>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="P"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content" android:id="@+id/textView15"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="+/-"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content" android:id="@+id/textView16"/>
                        </TableRow>
                    </TableRow>
                    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="00"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView17"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="00"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView18"/>
                        </TableRow>
                        <TextView
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="00"
                                style="@style/Regular"
                                android:textSize="30sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView19"/>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="00"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView20"/>
                        </TableRow>
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="00"
                                    style="@style/Regular"
                                    android:textSize="30sp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/textView21"/>
                        </TableRow>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableRow>
    </LinearLayout>

</LinearLayout>